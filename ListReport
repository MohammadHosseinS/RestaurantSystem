//    ListReportForm.cs
using Dapper;
using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace RestaurantSystem
{
    public partial class ListReportForm : Form
    {
        public ListReportForm()
        {
            InitializeComponent();
            dataGridView1.SelectionMode = DataGridViewSelectionMode.FullRowSelect;
        }

        string select1 = " dbo.Branches.City, dbo.Branches.Name ";
        string select2 = " dbo.Customers.Phone + ',  ' + dbo.Customers.Name ";
        string select3 = " SUM(dbo.OrderFiles.TotalPrice)  AS TotalPrice ";

        string group1 = " dbo.Branches.City, dbo.Branches.Name ";
        string group2 = " dbo.Customers.Phone , dbo.Customers.Name ";
        string group3 = " TotalPrice";

        Bridge bridge = new(@"Persist Security Info=False;User ID=moghari2;password=123456;Initial Catalog=RestaurantSystem;Data Source=(local)");

        private void WDate_CheckedChanged(object sender, EventArgs e)
        {
            dateTimePicker1.Enabled = WDate.Checked ? true : false;
            dateTimePicker2.Enabled = WDate.Checked ? true : false;
        }
        private void WPhone_CheckedChanged(object sender, EventArgs e)
        {
            textBox2.Enabled = WPhone.Checked ? true : false;
        }
        private void WItem_CheckedChanged(object sender, EventArgs e)
        {
            textBox1.Enabled = WItem.Checked ? true : false;
        }


        private async void SearchBtn_Click(object sender, EventArgs e)
        {

            string SqlSelect = (Sshobe.Checked == true && SCustomer.Checked == true && STotalPrice.Checked == false) ? select1 + ", " + select2 :
                (Sshobe.Checked == true && SCustomer.Checked == false && STotalPrice.Checked == true) ? select1 + ", " + select3 :
                (Sshobe.Checked == true && SCustomer.Checked == false && STotalPrice.Checked == false) ? select1 :
                (Sshobe.Checked == false && SCustomer.Checked == true && STotalPrice.Checked == true) ? select2 + ", " + select3 :
                (Sshobe.Checked == false && SCustomer.Checked == true && STotalPrice.Checked == false) ? select2 :
                (Sshobe.Checked == false && SCustomer.Checked == false && STotalPrice.Checked == true) ? select3 :
                select1 + ", " + select2 + ", " + select3 ;
                 // افزودن یک خط برای حالتی که هرسه خالی باشند نیاز نیست، چون در آن صورت هم باید خط آخر اجرا شود



            string SqlGroupBy = (Sshobe.Checked == true && SCustomer.Checked == true && STotalPrice.Checked == false) ? " GROUP BY " + group1 + ", " + group2 :
                (Sshobe.Checked == true && SCustomer.Checked == false && STotalPrice.Checked == true) ? " GROUP BY " + group1 + ", " + group3 :
                (Sshobe.Checked == true && SCustomer.Checked == false && STotalPrice.Checked == false) ? " GROUP BY " + group1 :
                (Sshobe.Checked == false && SCustomer.Checked == true && STotalPrice.Checked == true) ? " GROUP BY " + group2 + ", " + group3 :
                (Sshobe.Checked == false && SCustomer.Checked == true && STotalPrice.Checked == false) ? " GROUP BY " + group2 :
                (Sshobe.Checked == false && SCustomer.Checked == false && STotalPrice.Checked == true) ? " GROUP BY " + group3 :
                " GROUP BY " + group1 + ", " + group2 + ", " + group3;
                 // افزودن یک خط برای حالتی که هرسه خالی باشند نیاز نیست، چون در آن صورت هم باید خط آخر اجرا شود

            DateTime now = DateTime.Now;
            now.AddTicks(-(now.Ticks % TimeSpan.TicksPerSecond));

            DateTime middle = dateTimePicker1.Value;
            middle.AddTicks(-(middle.Ticks % TimeSpan.TicksPerSecond));

            DateTime? date1 = new();
            date1 = middle == now ? null : middle;


            DateTime middle2 = dateTimePicker2.Value;
            middle2.AddTicks(-(middle2.Ticks % TimeSpan.TicksPerSecond));

            DateTime? date2 = new();
            date2 = middle2 < middle ? middle2 : null;

            string SqlWhere = (WItem.Checked == true && WPhone.Checked == false && WDate.Checked == true && textBox1.Text != "" && textBox2.Text != "") ? " WHERE dbo.items.Name = '" + textBox1.Text + " '" + " AND " + "dbo.OrderFiles.Date BETWEEN '" + date1 + "' AND '" + date2 + "'" :
                (WItem.Checked == true && WPhone.Checked == true && WDate.Checked == false && textBox1.Text != "") ? " WHERE dbo.items.Name = '" + textBox1.Text + "'" + "AND " + "dbo.Customers.Phone = '" + textBox2.Text + "'" :
                (WItem.Checked == true && WPhone.Checked == false && WDate.Checked == false && textBox1.Text != "") ? " WHERE dbo.items.Name = '" + textBox1.Text + "'" :
                (WItem.Checked == false && WPhone.Checked == true && WDate.Checked == false) ? " WHERE dbo.Customers.Phone = '" + textBox2.Text + "'" :
                (WItem.Checked == false && WPhone.Checked == true && WDate.Checked == true && textBox2.Text != "") ? " WHERE dbo.Customers.Phone = '" + textBox2.Text + "'" + "AND" + "dbo.OrderFiles.Date BETWEEN '" + date1 + "' AND '" + date2 + "'" :
                (WItem.Checked == false && WPhone.Checked == false && WDate.Checked == true && textBox2.Text != "") ? " WHERE dbo.OrderFiles.Date BETWEEN '" + date1 + "' AND '" + date2 + "'" :
                (WItem.Checked == true && WPhone.Checked == true && WDate.Checked == true && textBox1.Text != "" && textBox2.Text != "") ? " WHERE dbo.items.Name = '" + textBox1.Text + "'" + " AND " + "dbo.Customers.Phone = '" + textBox2.Text + "'" + "AND" + "dbo.OrderFiles.Date BETWEEN '" + date1 + "' AND '" + date2 + "'" :
                " ";

            ReportTitleLabel.Text = (Sshobe.Checked == true && SCustomer.Checked == true && STotalPrice.Checked == false) ? "شعبات و مشتریان" :
                (Sshobe.Checked == true && SCustomer.Checked == false && STotalPrice.Checked == true) ? "فروش شعبات" :
                (Sshobe.Checked == true && SCustomer.Checked == false && STotalPrice.Checked == false) ? "شهرستان ها و شعبات" :
                (Sshobe.Checked == false && SCustomer.Checked == true && STotalPrice.Checked == true) ? "خرید مشتریان" :
                (Sshobe.Checked == false && SCustomer.Checked == true && STotalPrice.Checked == false) ? "لیست مشتریان و شماره تلفن ها" :
                (Sshobe.Checked == false && SCustomer.Checked == false && STotalPrice.Checked == true) ? "مجموع فروش" :
                 "شعبات، مشتریان و فروش";
                // افزودن یک خط برای حالتی که هرسه خالی باشند نیاز نیست، چون در آن صورت هم باید خط آخر اجرا شود

            
            if (WDate.Checked == true && date1 == null || date2 == null)
            {
                MessageBox.Show("تاریخ به درستی وارد نشده");
            }
            else if (WItem.Checked == true && textBox1.Text == "")
            {
                MessageBox.Show("نام غذا وارد نشده");
            }
            else if (WPhone.Checked == true && textBox2.Text == "")
            {
                MessageBox.Show("شماره تماس مشتری وارد نشده");
            }
            else
            {
                var param = new DynamicParameters();

                param.Add("Select", SqlSelect);
                param.Add("Where", SqlWhere);
                param.Add("GroupBy", SqlGroupBy);

                DataSet ds = await bridge.ReadListReport(param);
                DataTable dt = ds.Tables[0];

                dataGridView1.DataSource = null;
                dataGridView1.DataSource = dt.DefaultView;

                panel1.SendToBack();
                panel1.Hide();
                panel2.BringToFront();
            }
        }

        private void ReturnBtn_Click(object sender, EventArgs e)
        {
            panel2.SendToBack();
            panel1.Show();
            panel1.BringToFront();
        }

        private void ListReportForm_Load(object sender, EventArgs e)
        {

        }
    }
}
